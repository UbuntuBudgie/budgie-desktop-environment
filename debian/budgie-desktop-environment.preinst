#!/bin/sh

set -e

files="
icons/hicolor/256x256/apps/ubuntu-logo-icon.png
applications/nemo.desktop
"

if [ "$1" = "upgrade" ] || [ "$1" = "install" ]; then
	for item in $files 
	do
		dpkg-divert --package budgie-desktop-environment --add --rename \
		--divert "/usr/share/$item"".budgie" "/usr/share/$item"
	done
fi

